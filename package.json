{
  "name": "chapbook-tweego-starter",
  "version": "0.2.0",
  "description": "A Twine/Twee starter project to use the Chapbook story format with Tweego compiler.",
  "author": {
    "name": "Marc-AndrÃ© Goyette",
    "url": "https://marcandregoyette.com"
  },
  "private": true,
  "homepage": "https://github.com/magoyette/chapbook-tweego-starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/magoyette/chapbook-tweego-starter.git"
  },
  "bugs": {
    "url": "https://github.com/magoyette/chapbook-tweego-starter/issues"
  },
  "main": "index.js",
  "config": {
    "chapbookVersion": "1.0.0",
    "tweegoVersion": "2.0.0",
    "poofVersion": "1.5.0"
  },
  "scripts": {
    "download": "npm run download:tweego && npm run download:chapbook && npm run download:poof",
    "download:tweego": "./download-tweego $npm_package_config_tweegoVersion",
    "download:chapbook": "./download-chapbook $npm_package_config_chapbookVersion",
    "download:poof": "./download-poof $npm_package_config_poofVersion",
    "build": "npm run build:webpack && npm run build:chapbook",
    "build:webpack": "rm -drf dist && npx webpack",
    "watch:webpack": "rm -drf dist && npx webpack --watch",
    "build:chapbook": "./tweego/tweego --format=chapbook --output=./dist/chapbook/index.html ./src/twee ./dist/chapbook/scripts.bundle.js ./dist/chapbook/styles.bundle.css",
    "watch:chapbook": "./tweego/tweego -w --format=chapbook --output=./dist/chapbook/index.html ./src/twee ./dist/chapbook/scripts.bundle.js ./dist/chapbook/styles.bundle.css",
    "start": "npm run start:chapbook",
    "start:chapbook": "live-server ./dist/chapbook",
    "poof": "npm run build:webpack && npm run build:poof",
    "build:poof": "mkdir -p dist/poof && ./tweego/tweego --format=poof --output=./dist/poof/index.html ./src/twee",
    "watch:poof": "mkdir -p dist/poof && ./tweego/tweego -w --format=poof --output=./dist/poof/index.html ./src/twee",
    "start:poof": "live-server ./dist/poof"
  },
  "browserslist": "defaults, iOS > 9, IE 11",
  "devDependencies": {
    "autoprefixer": "^9.6.5",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-loader": "^3.0.2",
    "file-loader": "^4.2.0",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-webpack-plugin": "^1.0.2",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
